{
  "name": "kontainers",
  "version": "1.0.0",
  "description": "Container management and reverse proxy platform",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist",
    "start": "bun run dist/index.js",
    "test": "echo 'ðŸš€ Running ALL tests...' && bun test && echo 'ðŸŽ­ Running Playwright tests...' && bunx playwright test --reporter=line",
    "test:bun-only": "bun test",
    "test:comprehensive": "bun run test:all",
    "test:watch": "bun test --watch",
    "test:coverage": "bun run scripts/test-runner.ts --coverage",
    "test:unit": "bun test tests/unit",
    "test:component": "bun test tests/component",
    "test:frontend": "bun test tests/frontend",
    "test:backend": "bun test tests/backend",
    "test:integration": "bun test tests/integration",
    "test:e2e": "bunx playwright test",
    "test:e2e-auth": "bunx playwright test tests/e2e/auth.spec.ts",
    "test:e2e-dashboard": "bunx playwright test tests/e2e/dashboard.spec.ts",
    "test:e2e-containers": "bunx playwright test tests/e2e/containers.spec.ts",
    "test:e2e-proxy": "bunx playwright test tests/e2e/proxy.spec.ts",
    "test:e2e-metrics": "bunx playwright test tests/e2e/metrics.spec.ts",
    "test:e2e-settings": "bunx playwright test tests/e2e/settings.spec.ts",
    "test:e2e-responsive": "bunx playwright test tests/e2e/responsive.spec.ts",
    "test:e2e-accessibility": "bunx playwright test tests/e2e/accessibility.spec.ts",
    "test:smoke": "bun test tests/smoke",
    "test:performance": "bun test tests/performance --timeout 60000",
    "test:all": "bun run scripts/test-runner.ts --all",
    "test:list": "bun run scripts/test-runner.ts --list",
    "lint": "eslint src",
    "lint:fix": "eslint src tests --fix",
    "prepare": "bash scripts/install-hooks.sh",
    "hooks:install": "bash scripts/install-hooks.sh",
    "hooks:skip": "export SKIP_HOOKS=true"
  },
  "dependencies": {
    "chart.js": "^4.4.0",
